{
  "name": "posthtml-spaceless",
  "version": "0.0.2",
  "description": "A posthtml plugin remove whitespace between HTML tags",
  "license": "MIT",
  "repository": "GitScrum/posthtml-spaceless",
  "homepage": "GitScrum/posthtml-spaceless#readme",
  "bugs": "GitScrum/posthtml-spaceless/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "lintjs": "eslint ./src/*.js ./test/*.js",
    "lintmd": "eslint --ext md --rule indent: [error, 4] .",
    "pretest": "clinton && npm run lintjs && npm run lintmd",
    "commitmsg": "conventional-changelog-lint -e",
    "postpublish": "conventional-changelog -i CHANGELOG.md -s -r 0 && git commit -am \"chore(changelog): Update changelog\"",
    "patch": "np patch --any-branch",
    "minor": "np minor --any-branch",
    "major": "np major --any-branch",
    "test": "nyc ava",
    "clean": "rm -rf lib && mkdir lib",
    "build": "npm run clean && babel src/ -d lib/",
    "prepublish": "npm run build",
    "update": "updtr && ava-codemods --force",
    "testen": "testen -n -- ava"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "remove",
    "tags"
  ],
  "dependencies": {
    "posthtml-parser": "^0.3.0",
    "posthtml-render": "1.0.6"
  },
  "devDependencies": {
    "ava": "*",
    "ava-codemods": "^0.3.2",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^8.0.2",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-minify": "^0.2.0",
    "babel-register": "^6.11.6",
    "clinton": "^0.13.0",
    "conventional-changelog-cli": "^1.2.0",
    "conventional-changelog-lint": "^2.1.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.12.0",
    "eslint-config-xo": "^0.19.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-ava": "^4.3.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-require-path-exists": "^1.1.5",
    "eslint-plugin-xo": "^1.0.0",
    "husky": "^0.14.3",
    "is-promise": "^2.1.0",
    "np": "^2.6.0",
    "nyc": "^11.3.0",
    "posthtml": "^0.10.1",
    "testen": "^2.2.1",
    "updtr": "^2.0.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ],
      "minify"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "format": "node_modules/eslint-formatter-pretty",
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "xo",
      "babel",
      "require-path-exists",
      "markdown"
    ],
    "extends": [
      "xo",
      "plugin:xo/recommended",
      "plugin:ava/recommended"
    ]
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  },
  "testen": {
    "node": [
      "4",
      "5",
      "6",
      "7"
    ]
  }
}
